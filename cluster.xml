<?xml version="1.0"?>
<clickhouse>
    <zookeeper>
        <node index="1">
            <host>${ZK_HOST}</host>
            <port>${ZK_PORT}</port>
        </node>
    </zookeeper>

    <remote_servers>
        <cluster>
            <shard>
                <replica>
                    <host>clickhouse</host>
                    <port>9000</port>
                </replica>
            </shard>
        </cluster>
    </remote_servers>
</clickhouse>